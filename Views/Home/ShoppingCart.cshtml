@model List<Turebi>;

<div class="grid-container">
    <div class="row">

        <div class="col-md-12 text-center">

            <h2>
                კალათა
            </h2>
            <span class="text text-danger" style="font-size:20px">@TempData["sec"]</span>
			<span class="text text-danger" style="font-size:20px">@TempData["SastumroWaishala"]</span>
			<span class="text text-danger" style="font-size:20px">@TempData["SastumroWashlaError"]</span>
			
        </div>
    </div>
    @if (Model == null)
    {

        <h1>თქვენ ჯერ არ გაქვთ დამატებული კალათაში ტური</h1>

    }
    else
    {

		<h1 style="margin-top:30px;margin-bottom:30px">ტურები</h1>
        foreach (var i in Model)
        {
            <div class="card mb-3 w-100" style="">
                <div class="row g-0">
                    <div class="col-md-4">
                        <a asp-controller="Home" asp-action="GetTuri" asp-route-id="@i.id">

                            <img src="~/turebi/@i.image_name" class="img-fluid rounded-start" alt="..." style=" object-fit: cover; width: 100%;
    height: 200px">
                        </a>
                    </div>
                    <div class="col-md-8">

                        <div class="card-body">
                            <small class="text-body-secondary"></small>
                            <h5 class="card-title">@i.Name</h5>
                            <p class="card-text">@i.Description</p>
                            <p class="card-text"><small class="text-body-secondary">@i.Price</small></p>
                          <form method="post" asp-controller="Home" asp-action="AmoshlaKalatidan" asp-route-id="@i.id">

                            <button type="submit" class="btn btn-outline-danger">კალათიდან ამოშლა</button>
                          </form>

                        </div>



                    </div>

				</div>

			</div>
		}
	}
	<h1 style="margin-top:30px;margin-bottom:30px">სასტუმროები</h1>
	@if (ViewBag.sastumroebi != null)
	{
		foreach (var i in ViewBag.sastumroebi)
		{
			<div class="card mb-3 w-100" style="">
				<div class="row g-0">
					<div class="col-md-4">
						<a asp-controller="Home" asp-action="GetSastumro" asp-route-id="@i.Id">

							<img src="~/Sastumroebi/@i.image_name" class="img-fluid rounded-start" alt="..." style=" object-fit: cover; width: 100%;
    height: 200px">
						</a>
                </div>
					<div class="col-md-8">

						<div class="card-body">
							<small class="text-body-secondary"></small>
							<h5 class="card-title">@i.Name</h5>
							<p class="card-text">@i.Description</p>
							<p class="card-text"><small class="text-body-secondary">@i.Fasi</small></p>
							<form method="post" asp-controller="Home" asp-action="Kalatidan_Washla" asp-route-id="@i.Id">

								<button type="submit" class="btn btn-outline-danger">კალათიდან ამოშლა</button>
							</form>
						</div>
					</div>
				</div>
            </div>
        }
    }

</div>