@model List<Company>

<div class="row">
    <div class="col-md-12 text-center">
        <h2>ყველა კომპანია</h2>
    </div>
</div>

@if (User.IsInRole("Admin"))
{
    <div class="col-12 text-center mb-3">
        <a asp-controller="Home" asp-action="#" class="btn btn-outline-success">
            <i class="bi bi-plus-circle-fill" style="font-size:25px"></i> დამატება
        </a>
    </div>
}

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    @foreach (var company in Model)
    {
        <div class="col">
            <div class="card h-100">
                <a asp-controller="Home" asp-action="Get_Kompania" asp-route-id="@company.Company_Id">
                    <div class="card-img-wrapper" style="height: 200px; overflow: hidden; border-radius: 10px;">
                        <img src="~/companiebi/@company.img_name" class="card-img-top img-fluid" alt="@company.Name"
                             style="object-fit: contain; width: 100%; height: 100%;">
                    </div>
                </a>
                <div class="card-body">
                    <h5 class="card-title text-center text-success">@company.Name</h5>
                    <p class="card-text text-center" style="height: 60px; overflow: hidden;">@company.description</p>
                </div>
            </div>
        </div>
    }
</div>
