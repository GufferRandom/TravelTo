@model List<Company>

<div class="row">
    <div class="col-md-12 text-center">
        <h2>ყველა კომპანია</h2>
    </div>
</div>

@if (User.IsInRole("Admin"))
{
    <div class="col-5" style="width: 22px">
        <a asp-controller="Home" asp-action="#"><i class="bi bi-plus-circle-fill" style="font-size:25px"></i></a>
    </div>
}
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
  
    @foreach (var company in Model)
    {
        <div class="col">
            <div class="card">
                <a asp-controller="Home" asp-action="Get_Kompania" asp-route-id="@company.Company_Id">
                    <img src="~/companiebi/@company.img_name" class="card-img-top img-fluid" alt="@company.Name" style="height: 200px; object-fit: cover;">
                </a>
                <div class="card-body">
                    <h5 class="card-title">@company.Name</h5>
                    <p class="card-text">@company.description</p>
                </div>
            </div>
        </div>
    }
</div>
