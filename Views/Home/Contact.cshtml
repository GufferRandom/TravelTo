@using TravelTo.Models
@model ContactPerson

<div class="container">
    <div class="row">
            <h2  class="text-center text-success fw-bold m-4">ჩვენს შესახებ</h2>
        <div class="col-md-6">

            <h3 class="text-secondary" style="margin-bottom:30px">საკონტაქტო ინფორმაცია</h3>
            <p>dakavebuli kompania vart da dagvikavshirdit tu ramea</p>
            <i class="bi bi-telephone">
            </i>
            <label class="text-secondary fw-bold" style="margin-left:10px">
                +995995995
            </label>
            <p></p>
            <i class="bi bi-envelope"></i>
            <label class="text-secondary fw-bold" style="margin-left:10px">
                turebidto@gmail.com
            </label>
            <p></p>
            <i class="bi bi-geo-alt"></i>
            <label class="text-secondary fw-bold " style="margin-left:10px">
                pekinis dasaxleba
             </label>
        </div>
        
        <div class="col-md-6">
            <span class="text-success">@TempData["Successfull"]</span>
            <span class="text-danger">@TempData["warning"]</span>
            <h3 class="text-secondary" style="margin-bottom:30px">დაგვიკავშირდით</h3>
            <form class="row g-3" method="post" asp-controller="Home" asp-action="Contact">
                
                <div class="form-floating">
                    <input type="text" class="form-control" id="floatingInput" placeholder="Giorgi" asp-for="@Model.First_Name" required> 
                    <label for="floatingInput" style="margin-left:10px" asp-for="@Model.First_Name">სახელი</label>
                    <span asp-validation-for="@Model.First_Name" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input type="text" class="form-control" id="FloatingGvari" placeholder="GARIANTISHVILIO" asp-for="@Model.Last_Name"required>
                    <label for="FloatingGvari" style="margin-left:10px">გვარი</label>
                    <span asp-validation-for="@Model.Last_Name" class="text-danger"></span>

                </div>
                <div class="form-floating">
                    <input type="text" class="form-control" id="FloatingTelefoni" placeholder="99559559595" asp-for="@Model.Telephoni" required>
                    <label for="FloatingTelefoni" style="margin-left:10px">ტელეფონი</label>
                    <span asp-validation-for="@Model.Telephoni" class="text-danger"></span>

                </div>
                <div class="form-floating">
                    <input type="email" class="form-control" id="Floatinggmail" placeholder="name@example.com" asp-for="@Model.gmail" required>
                    <label for="Floatinggmail" style="margin-left:10px">ელ-ფოსტა</label>
                    <span asp-validation-for="@Model.gmail" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <textarea class="form-control" placeholder="დატოვე შეტყობინება" id="floatingShetyobineba" style="height: 100px;resize:none" asp-for="@Model.Messege"></textarea>
                    <label for="floatingShetyobineba">შეტყობინება</label>

                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button class="btn btn-success" type="submit">დაკონტაქტება</button>
                </div>
            </form>
        </div>
    </div>
</div>
