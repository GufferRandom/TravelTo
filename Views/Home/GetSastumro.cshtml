@model Sastumroebi
<div class="container text-center m-4">
    <span class="text-danger fw-bold">@TempData["Sastumroexists"]</span>
    <span class="text-success fw-bold">@TempData["SastumroSuc"]</span>
    <span class="text-danger fw-bold">@TempData["NotRegirted"]</span>
</div>
<section class="py-5">
    <div class="container">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6">
                <img class="card-img-top rounded shadow-lg mb-4" src="~/Sastumroebi/@Model.image_name" alt="@Model.Name - Image" />
            </div>
            <div class="col-md-6">
                <h1 class="display-5 fw-bolder text-primary">@Model.Name</h1>
                <div class="fs-4 text-muted mb-4">
                    <span class="text-success">$@Model.Fasi</span>
                </div>
                <p class="lead text-dark">@Model.Description</p>
                <div class="d-flex align-items-center mb-3">
                    <form method="post" asp-controller="Home" asp-action="Fav_Sastumroebi" asp-route-id="@Model.Id" name="form1">
                        <button type="submit" class="btn btn-outline-primary shadow-sm me-3">კალათაში დამატება</button>
                    </form>
                    <button type="button" class="btn btn-outline-success shadow-sm" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                        დაჯავშნა
                    </button>
                    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title fw-bolder " id="exampleModalLabel">დაჯავშნა</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <form method="post" asp-controller="Home" asp-action="Dajavshna">

                                <div class="modal-body">
                                    
                                    <div class="form-floating mb-3">
                                        @{
                                            SastumroDajavshna persona = new SastumroDajavshna();
                                        }
                                        <input type="text" class="form-control" id="SAXELI" placeholder="სახელი">
                                        <label for="SAXELI">სახელი</label>
                                        <span asp-validation-for="@persona.First_Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="GVARI" placeholder="გვარი">
                                        <label for="GVARI">გვარი</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input type="tel" class="form-control" id="TELNOMER" placeholder="ტელეფონის ნომერი">
                                        <label for="TELNOMER">ტელეფონის ნომერი</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input type="email" class="form-control" id="GMAIL" placeholder="გმაილი">
                                        <label for="GMAIL">გმაილი</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <textarea class="form-control" placeholder="დატოვე შეტყობინება" id="floatingShetyobineba" style="height: 100px;resize:none"></textarea>
                                        <label for="floatingShetyobineba">შეტყობინება</label>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">დახურვა</button>
                                    <button type="submit" class="btn btn-outline-success">დაჯავშნა</button>
                                </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="d-flex align-items-center mt-3">
                    <i class="bi bi-geo-alt text-success fs-5"></i>
                    <label class="fw-bold text-success ms-2">@Model.Lokacia</label>
                </div>
                @if (Model.Nomer is not null)
                {
                    <div class="d-flex align-items-center mt-2">
                        <i class="bi bi-telephone text-secondary fs-5"></i>
                        <label class="text-secondary fw-bold ms-2">@Model.Nomer</label>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<section class="py-5">
    <div class="container">
        <h2 class="fw-bolder mb-4">სერვისები</h2>
        <ol class="list-group" style="margin-top: 20px;">
            @for (int index = 1; index < ViewBag.tvisebasaxeli.Count - 1; index++)
            {
                var j = ViewBag.tvisebebi.GetType().GetProperty(ViewBag.tvisebasaxeli[index])?.GetValue(ViewBag.tvisebebi, null);
                var icon = j == "YES" ? "bi-check-circle text-success" : "bi-x-circle text-danger";
                var text = j == "YES" ? "YES" : "NO";
                <li class="list-group-item d-flex justify-content-between">
                    <span class="fw-bold">@ViewBag.tvisebasaxeli[index]</span>
                    <span class="badge @icon" style="font-size: 1.5em;">
                        @text
                    </span>
                </li>
            }
        </ol>
    </div>
</section>
<section class="py-5 bg-light">
    <div class="container px-4 px-lg-5 mt-5">
        <h2 class="fw-bolder mb-4">მსგავსი პროდუქტები</h2>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var i in ViewBag.yvelasastumro as List<Sastumroebi>)
            {
                <div class="col mb-5">
                    <div class="card h-100 shadow-sm">
                        <img class="card-img-top rounded" style="height:150px; object-fit: cover;" src="~/Sastumroebi/@i.image_name" alt="@i.Name" />
                        <div class="card-body p-4">
                            <div class="text-center">
                                <h5 class="fw-bolder">@i.Name</h5>
                                <p class="text-muted">$@i.Fasi</p>
                            </div>
                        </div>
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <a class="btn btn-outline-dark mt-auto" asp-controller="Home" asp-action="GetSastumro" asp-route-id="@i.Id">
                                    დეტალურად
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
